{
  "manifest_version": 3,
  "name": "Deal Bandit",
  "version": "2.0",
  "description": "Analyze FB Marketplace deals with Live Market Search",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "logo.png"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*",
    "https://*.craigslist.org/*",
    "https://offerup.com/*",
    "https://api.openai.com/*",
    "https://serpapi.com/*"
  ]
}
